server {
    listen 80;
    server_name caracole.io www.caracole.io;
    return 301 https://caracole.io$request_uri;
}

server {
    listen 443 ssl;
    server_name www.caracole.io;

    ssl_certificate     /etc/letsencrypt/live/caracole.io/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/caracole.io/privkey.pem;

    return 301 https://caracole.io$request_uri;
}

server {
    listen 443 ssl;
    server_name caracole.io;

    ssl_certificate     /etc/letsencrypt/live/caracole.io/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/caracole.io/privkey.pem;

    access_log  /var/log/nginx/caracole.log;
    error_log  /var/log/nginx/caracole.err;

    location /static/ {
        alias /var/www/caracole/static_dest/;
        expires 30d;
    }

    location /media/ {
        alias /var/www/caracole/media/;
        expires 30d;
    }

    location /.well-known {
        alias /var/www/letsencrypt/.well-known;
    }

    location / {
        proxy_pass http://127.0.0.1:8006;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
